
tool language-actions is { }

process LanguageActions is
let
  T : language-actions,
  Type : term,
  Events : list
in
  printf("waiting for language-actions tool to connect...\n") .  
  rec-connect(T?) .
  printf("language-actions tool connected\n") .  
  rec-disconnect(T)
endlet

toolbus(LanguageActions)